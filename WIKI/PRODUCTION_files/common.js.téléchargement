var session_id = '';
var session_uniqid = '';
var session_name = '';
var main_directory = '';
var rootUrl = '';
var session_lng = '';
var url_atmosphere = '';

/**
 * Sauvegarde d'infos de session
 * 
 * @param atmosphere Url des images
 * @param lng Langue courante
 * @param name Nom de la session
 * @param id Id de la session
 * @param directory Répertoire de base pour accéder au site
 * @param Url URL correspondant à  la racine du site
 * @param uniqid Id lié à  la connexion de l'utilisateur
 * */
function set_session(atmosphere, lng, name, id, directory, Url, uniqid)
{
  session_lng = lng;
  session_name = name;
  session_id = id;
  main_directory = directory;
  rootUrl = Url;
  url_atmosphere = atmosphere;
  session_uniqid = uniqid;
}
